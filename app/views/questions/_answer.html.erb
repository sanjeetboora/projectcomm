<link rel='stylesheet prefetch' href='https://s3-us-west-2.amazonaws.com/s.cdpn.io/161872/paper-collapse.min.css'>
<link rel='stylesheet prefetch' href='http://netdna.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css'>

<div class="collapse-card">
  <div class="answer">
      <div class="userDetail">
<div class="title">
    <header>
         <div class="fakeimage"></div>
         <p><i class="fa fa-calendar"></i>01/21/15</p>
         <p><i class="fa fa-user"></i><%= answer.user.email %></p>
         <br>
         <p><%= answer.content[0..30] %></p>
         <!-- <h2>Lorem Ipsum</h2> -->
    </header>
</div>
<div class="body">
<p><%= answer.content %></p>

   <br>
   <%if can? :update,answer%>
   <span><%= link_to 'Edit', answer %></span>
  <% end %>.
  <%if can? :destroy,answer%>
  <span><%= link_to "Delete", answer, method: :delete, data: {confirm: "Are you sure?"}%></span>
  <% end %>
  <span><%= link_to 'Show', answer ,params[id: answer.id]%></span>
   <i class="fa fa-pencil" aria-hidden="true"> ADD COMMENT</i>
  </div>
 </div>
 </div>
</div>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
